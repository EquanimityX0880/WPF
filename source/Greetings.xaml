<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="121" Width="404">
    <Canvas Margin="0,0,0,364">
        <TextBlock TextWrapping="Wrap" Text="Select a message option and then choose the Display button." RenderTransformOrigin="0.504,0.834" Height="18" Canvas.Left="6" Canvas.Top="7" Width="330"/>
        <RadioButton x:Name="HelloButton" IsChecked="True" Content="Hello" Height="18" Canvas.Left="92" Canvas.Top="25" Width="57" HorizontalAlignment="Left" VerticalAlignment="Top"
                     />
        <RadioButton x:Name="GoodbyeButton" Content="Goodbye" Height="18" Canvas.Left="6" Canvas.Top="24" Width="86" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button Content="Display" Click="Button_Click" Width="143" RenderTransformOrigin="1.93,0.944" HorizontalAlignment="Center" Height="35" Canvas.Left="6" Canvas.Top="42" VerticalAlignment="Top"/>
    </Canvas>
</Window>
